          <section class="summary-information">
            <div class="row">
              <div class="small-20 small-offset-2 large-24 large-offset-0 column">
                <h1>Listing Organisations</h1>
                  <p id="notice"><%= notice %></p>
              </div>
            </div>
          </section>
          <section>
            <div class="row">
              <div class="small-20 small-offset-2 large-24 large-offset-0 column">
                <table class="content-items">
                  <thead>
                    <tr>
                      <th scope="col">Title</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @organisations.each do |organisation| %>
                      <tr>
                        <td class="item-title"><%= link_to organisation.name, edit_organisation_path(organisation) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <%= link_to 'New Organisation', new_organisation_path, class: 'button-new' %>
              </div>
            </div>
          </section>
